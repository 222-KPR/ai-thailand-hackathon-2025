# AI4Thai Crop Guardian - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai4thai
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1

# Redis Cache and Queue
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Gateway
API_HOST=0.0.0.0
API_PORT=3000
API_WORKERS=4

# Service URLs
VISION_SERVICE_URL=http://localhost:8001
LLM_SERVICE_URL=http://localhost:8002

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI API (for LLM service)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude API (alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Weather API
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Text-to-Speech API
TTS_API_KEY=your_tts_api_key_here
TTS_API_URL=https://texttospeech.googleapis.com/v1

# Speech-to-Text API
STT_API_KEY=your_stt_api_key_here
STT_API_URL=https://speech.googleapis.com/v1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800
JWT_ALGORITHM=RS256

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# FILE STORAGE
# =============================================================================

# Local file storage (development)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# S3-compatible storage (production)
# STORAGE_TYPE=s3
# S3_BUCKET=ai4thai-crop-guardian
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your_s3_access_key
# S3_SECRET_KEY=your_s3_secret_key
# S3_ENDPOINT=https://s3.amazonaws.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Rust Logging
RUST_LOG=info
RUST_BACKTRACE=1

# Python Logging
PYTHON_LOG_LEVEL=INFO
LOG_FORMAT=json

# Log File Configuration
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_FILES=10

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Vision Service
VISION_MODEL_PATH=./models/crop_disease_detection.onnx
VISION_CONFIDENCE_THRESHOLD=0.8
VISION_MAX_IMAGE_SIZE=10MB
VISION_SUPPORTED_FORMATS=jpg,jpeg,png,webp

# LLM Service
LLM_TEMPERATURE=0.7
LLM_MAX_CONTEXT_LENGTH=4000
LLM_RESPONSE_TIMEOUT=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEVELOPMENT_MODE=true
DEBUG_MODE=false

# Hot Reload
WATCH_FILES=true
RELOAD_ON_CHANGE=true

# Test Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/ai4thai_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Mode (uncomment for production)
# DEVELOPMENT_MODE=false
# DEBUG_MODE=false
# RUST_LOG=warn
# PYTHON_LOG_LEVEL=WARNING

# SSL Configuration (production)
# SSL_CERT_PATH=/etc/ssl/certs/ai4thai.crt
# SSL_KEY_PATH=/etc/ssl/private/ai4thai.key
# FORCE_HTTPS=true

# Database Connection Pool (production)
# DATABASE_MAX_CONNECTIONS=50
# DATABASE_MIN_CONNECTIONS=5
# DATABASE_IDLE_TIMEOUT=300

# Redis Configuration (production)
# REDIS_MAX_CONNECTIONS=50
# REDIS_IDLE_TIMEOUT=300

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
ENABLE_VOICE_CHAT=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_MODELS=false

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default Language
DEFAULT_LANGUAGE=th
SUPPORTED_LANGUAGES=th,en

# Timezone
DEFAULT_TIMEZONE=Asia/Bangkok

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker Configuration
API_WORKER_THREADS=4
VISION_WORKER_THREADS=2
LLM_WORKER_THREADS=2

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1GB

# Queue Configuration
QUEUE_MAX_JOBS=1000
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@ai4thai.com

# Webhook Configuration
WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Usage Analytics
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=https://analytics.ai4thai.com
ANALYTICS_API_KEY=your_analytics_api_key

# Error Tracking
ERROR_TRACKING_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# Deep Linking
DEEP_LINK_SCHEME=ai4thai
DEEP_LINK_HOST=app.ai4thai.com

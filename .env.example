# AI4Thai Crop Guardian - Environment Configuration for Demonstration
# Copy this file to .env and update with your actual values
# AI services run on external AI4Thai infrastructure

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Local)
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai4thai
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Redis Cache and Queue (Local)
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Gateway (Local)
API_HOST=0.0.0.0
API_GATEWAY_PORT=3000

# Frontend (Local)
FRONTEND_PORT=8080
API_URL=http://localhost:3000
WS_URL=ws://localhost:3000/ws

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# =============================================================================
# EXTERNAL AI4THAI SERVICES (PROVIDED BY AI4THAI)
# =============================================================================

# AI4Thai Vision Service (External)
VISION_SERVICE_URL=https://vision-api.ai4thai.com
# Alternative for development: https://dev-vision-api.ai4thai.com

# AI4Thai LLM Service (External)
LLM_SERVICE_URL=https://llm-api.ai4thai.com
# Alternative for development: https://dev-llm-api.ai4thai.com

# AI4Thai API Key (Required - provided by AI4Thai team)
AI4THAI_API_KEY=your_ai4thai_api_key_here

# =============================================================================
# EXTERNAL THIRD-PARTY APIs
# =============================================================================

# Weather API (Optional)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=demo-jwt-secret-change-in-production-12345
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# MinIO (Local S3-compatible storage) - Optional
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
APP_ENV=demo
DEVELOPMENT_MODE=true

# Logging
RUST_LOG=info
RUST_BACKTRACE=1

# Worker Configuration
WORKER_THREADS=2

# =============================================================================
# DEMONSTRATION SETTINGS
# =============================================================================

# Demo Mode Features
ENABLE_DEMO_DATA=true
DEMO_USER_EMAIL=demo@ai4thai.com
DEMO_USER_PASSWORD=demo123

# Sample Data
LOAD_SAMPLE_CROPS=true
LOAD_SAMPLE_DISEASES=true

# =============================================================================
# AI4THAI SERVICE CONFIGURATION
# =============================================================================

# Vision Service Settings (handled by AI4Thai infrastructure)
# These are for reference only - actual configuration is managed by AI4Thai
VISION_CONFIDENCE_THRESHOLD=0.8
VISION_MAX_IMAGE_SIZE=10MB
VISION_SUPPORTED_FORMATS=jpg,jpeg,png,webp

# LLM Service Settings (handled by AI4Thai infrastructure)
# These are for reference only - actual configuration is managed by AI4Thai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_RESPONSE_TIMEOUT=30

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# For local development, you can override AI service URLs
# Uncomment these if you want to run AI services locally for development
# VISION_SERVICE_URL=http://localhost:8001
# LLM_SERVICE_URL=http://localhost:8002

# =============================================================================
# PRODUCTION OVERRIDES (DO NOT USE IN DEMO)
# =============================================================================

# Production Database (DO NOT USE FOR DEMO)
# DATABASE_URL=postgresql://prod_user:secure_password@prod-db:5432/ai4thai_prod

# Production Redis (DO NOT USE FOR DEMO)
# REDIS_URL=redis://prod-redis:6379

# Production Security (DO NOT USE FOR DEMO)
# JWT_SECRET=super-secure-production-jwt-secret-with-256-bits
# CORS_ORIGINS=https://app.ai4thai.com

# SSL Configuration (Production only)
# SSL_CERT_PATH=/etc/ssl/certs/ai4thai.crt
# SSL_KEY_PATH=/etc/ssl/private/ai4thai.key
# FORCE_HTTPS=true
